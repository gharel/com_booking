<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_booking/models/rules">
	<fieldset>
		<field name="id"
		       type="hidden"/>
		<field name="name"
		       type="text"
		       label="COM_BOOKING_ADMIN_ROOM_NAME_LABEL"
		       description="COM_BOOKING_ADMIN_ROOM_NAME_DESC"
		       size="100"
		       class="inputbox"
		       default=""
		       required="true"/>
		<field name="space"
		       type="text"
		       label="COM_BOOKING_ADMIN_ROOM_SPACE_LABEL"
		       description="COM_BOOKING_ADMIN_ROOM_SPACE_DESC"
		       size="20"
		       class="inputbox"
		       default=""
		       validate="int"
		       required="true"/>
		<field name="price"
		       type="text"
		       label="COM_BOOKING_ADMIN_ROOM_PRICE_LABEL"
		       description="COM_BOOKING_ADMIN_ROOM_PRICE_DESC"
		       size="20"
		       class="inputbox"
		       default=""
		       validate="decimal"
		       required="true"/>
	</fieldset>
</form>